<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CepikAppWinUI.Formulas.AddVehicleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CepikAppWinUI.Formulas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="AddVehicleWindow">

    <Grid Background="{StaticResource LightGreenRadialBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="Transparent" 
              Grid.Row="0" 
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.14*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Dodaj nowy pojazd" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaHeaderTextBlock}"
                   Grid.ColumnSpan="2"/>

            <Button Style="{StaticResource SaveButton}"
                Content="Zapisz"
                Grid.Column="1"
                Click="OnSaveClicked"/>

        </Grid>

        <TextBlock Text="Numer rejestracyjny:" Grid.Row="1" Grid.Column="0" Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="RegNumberBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="VIN:" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="VinBox" 
                 Grid.Row="2" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Marka:" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="BrandBox" 
                 Grid.Row="3" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Model:" 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="ModelBox" 
                 Grid.Row="4" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Rodzaj:" 
                   Grid.Row="5" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="TypeBox" 
                 Grid.Row="5" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Rok produkcji:" 
                   Grid.Row="6" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="YearBox"
                 Grid.Row="6" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Dane silnika:" 
                   Grid.Row="7" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="EngineBox" 
                 Grid.Row="7" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Rodzaj paliwa:" 
                   Grid.Row="8" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="FuelBox" 
                 Grid.Row="8" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Liczba miejsc:" 
                   Grid.Row="9" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="SeatsBox" 
                 Grid.Row="9" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Kolor:" 
                   Grid.Row="10" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <TextBox x:Name="ColorBox" 
                 Grid.Row="10" 
                 Grid.Column="1" 
                 Style="{StaticResource formulaTextBox}"/>

        <TextBlock Text="Termin przeglÄ…du:" 
                   Grid.Row="11" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>
        <CalendarDatePicker x:Name="InspectionDatePicker" 
                            Grid.Row="11" 
                            Grid.Column="1"
                            PlaceholderText="Wybierz" 
                            Foreground="black" 
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            Background="Transparent"
                            Style="{StaticResource CalendarDatePicking}"/>

        <TextBlock Text="Status rejestracji:" 
                   Grid.Row="12" 
                   Grid.Column="0" 
                   Style="{StaticResource formulaTextBlock}"/>

        <Border Grid.Row="12" 
                Grid.Column="1"
                Style="{StaticResource formulaComboBoxBorder}">
            <ComboBox x:Name="StatusBox" 
                  PlaceholderText="Wybierz"
                  Style="{StaticResource formulaComboBox}">
                <ComboBoxItem Content="Zarejestrowany"/>
                <ComboBoxItem Content="Niezarejestrowany"/>
            </ComboBox>
        </Border>
    </Grid>
</Window>
