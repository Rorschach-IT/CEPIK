<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CepikAppWinUI.UserControlls">
    <Style x:Key="header" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="black"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <Style x:Key="headerBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#696762"/>
        <Setter Property="BorderThickness" Value="1,1,1,1"/>
        <Setter Property="Padding" Value="20 15 20 15"/>
    </Style>

    <Style x:Key="GridUserControl" TargetType="Grid">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
</ResourceDictionary>
