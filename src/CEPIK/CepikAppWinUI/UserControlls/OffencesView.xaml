<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CepikAppWinUI.UserControlls.OffencesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CepikAppWinUI.UserControlls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Style="{StaticResource GridUserControl}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>

        <TextBlock Style="{StaticResource HeaderContent}"
                  Grid.Row="0" 
                  Grid.ColumnSpan="2">
           Wykroczenia
        </TextBlock>

        <Button Style="{StaticResource ButtonIcon}"
               Grid.Column="1">
            <FontIcon Glyph="&#xE710;" 
             Style="{StaticResource IconContent}"/>
        </Button>

        <Button Style="{StaticResource ButtonIcon}"
               Grid.Column="2">
            <FontIcon Glyph="&#xE74D;" 
             Style="{StaticResource IconContent}"/>
        </Button>

        <local:ReusableContent Grid.Column="3"/>

        <ScrollViewer Grid.Row="1"
                     Grid.ColumnSpan="4"
                     HorizontalScrollBarVisibility="Auto" 
                     VerticalScrollBarVisibility="Auto">
            <ListView SelectionMode="None">
                <ListView.Header>
                    <Grid Style="{StaticResource GridUserControl}" Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Numer rejestracyjny" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="PESEL" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ImiÄ™" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="3" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Nazwisko" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="4" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Data wykroczenia" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="5" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Opis" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="6" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Mandat" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="7" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Punkty karne" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="8" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Status" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--<TextBlock Text="{x:Bind numer_rejestracyjny}" Grid.Column="0"/>
                   <TextBlock Text="{x:Bind PESEL}" Grid.Column="1"/>
                   <TextBlock Text="{x:Bind imie}" Grid.Column="2"/>
                   <TextBlock Text="{x:Bind nazwisko}" Grid.Column="3"/>
                   <TextBlock Text="{x:Bind data_wykroczenia}" Grid.Column="4"/>
                   <TextBlock Text="{x:Bind opis}" Grid.Column="5"/>
                   <TextBlock Text="{x:Bind mandat}" Grid.Column="6"/>
                   <TextBlock Text="{x:Bind punkty_karne}" Grid.Column="7"/>
                   <TextBlock Text="{x:Bind status}" Grid.Column="8"/>-->
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
