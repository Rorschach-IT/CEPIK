<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="CepikAppWinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CepikAppWinUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="UserControlls/GlobalStyles.xaml"/>
                <ResourceDictionary Source="Formulas/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <Style TargetType="Grid">
                <Setter Property="Background" Value="#f0f7f0"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontFamily" Value="Arial"/>
            </Style>
            <Style TargetType="FontIcon">
                <Setter Property="Foreground" Value="Black"/>
            </Style>
            <RadialGradientBrush x:Key="LightGreenRadialBrush"
                         Center="0.5,0.5"
                         GradientOrigin="0.5,0.5"
                         RadiusX="0.8"
                         RadiusY="0.8">
                <GradientStop Color="#e4eded" Offset="0"/>
                <GradientStop Color="#e1f2f1" Offset="1"/>
            </RadialGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
