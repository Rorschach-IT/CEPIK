<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CepikAppWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CepikAppWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Centralna Ewidencja pojazdów i kierowców">

    <Grid Padding="20">
        <Grid.Background>
            <RadialGradientBrush 
            Center="0.5,0.5" 
            GradientOrigin="0.5,0.5"
            RadiusX="0.8" 
            RadiusY="0.8">
                <GradientStop Color="#e4eded" Offset="0"/>
                <GradientStop Color="#e1f2f1" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <TextBlock x:Name="ContentText"
                                   Text="{TemplateBinding Content}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontSize="14"/>

                                <Border x:Name="Underline"
                                Height="1"
                                Background="{TemplateBinding Foreground}"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,2"
                                Opacity="0"/>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="Underline"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <FontIcon Grid.Row="0" Grid.Column="0" Glyph="&#xE80F;" FontSize="25"/>

        <StackPanel Grid.Row="0" 
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Orientation="Horizontal" 
                    Padding="20"
                    HorizontalAlignment="Center"
                    Spacing="15">
            <Button Content="Pojazdy" 
                         Margin="5" 
                         Foreground="#029c3d"/>
            <Button Content="Osoby" 
                         Margin="5" 
                         Foreground="black"/>
            <Button Content="Przypisania pojazdów" 
                         Margin="5" 
                         Foreground="black"/>
            <Button Content="Przypisania ubezpieczeń" 
                         Margin="5" 
                         Foreground="black"/>
            <Button Content="Uprawnienia" 
                         Margin="5" 
                         Foreground="black"/>
            <Button Content="Kategorie prawa jazdy" 
                         Margin="5" 
                         Foreground="black"/>
            <Button Content="Zdarzenia pojazdu" 
                         Margin="5" 
                         Foreground="black"/>
            <Button Content="Wykroczenia" 
                         Margin="5" 
                         Background="#f0f7f0"
                         Foreground="red"/>
        </StackPanel>

        <FontIcon Grid.Row="0" Grid.Column="4" Glyph="&#xE713;" FontSize="25"/>

        <TextBlock Grid.Row="1" 
                   Grid.Column = "0"
                   Grid.ColumnSpan="2"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   Padding="20"
                   FontWeight="Bold">
            Pojazdy
        </TextBlock>

        <FontIcon Grid.Row="1" Grid.Column="2" Glyph="&#xE710;" />
        <FontIcon Grid.Row="1" Grid.Column="3" Glyph="&#xE74D;" />
        <FontIcon Grid.Row="1" Grid.Column="4" Glyph="&#xE749;" />

        <ScrollViewer Grid.Row="2" 
                      Grid.ColumnSpan="5" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto">
            <ListView SelectionMode="None">
                <ListView.Resources>
                    <Style x:Key="header" TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Foreground" Value="black"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                    <Style x:Key="headerBorder" TargetType="Border">
                        <Setter Property="BorderBrush" Value="#696762"/>
                        <Setter Property="BorderThickness" Value="1,1,1,1"/>
                        <Setter Property="Padding" Value="20 15 20 15"/>
                    </Style>
                </ListView.Resources>
                <ListView.Header>
                    <Grid Padding="10" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="numer rejestracyjny" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="VIN" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="marka" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="3" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="model" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="4" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="rodzaj" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="5" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="rok produkcji" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="6" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="dane silnika" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="7" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="rodzaj paliwa" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="8" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="liczba miejsc" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="9" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="kolor" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="10" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="termin przegladu" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="11" Style="{StaticResource headerBorder}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="status rejestracji" Style="{StaticResource header}" />
                                <FontIcon Glyph="&#xE74B;" FontSize="12" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" BorderBrush="#DDD" BorderThickness="0 0 0 1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--<TextBlock Text="{x:Bind numer_rejestracyjny}" Grid.Column="0"/>
                            <TextBlock Text="{x:Bind VIN}" Grid.Column="1"/>
                            <TextBlock Text="{x:Bind marka}" Grid.Column="2"/>
                            <TextBlock Text="{x:Bind model}" Grid.Column="3"/>
                            <TextBlock Text="{x:Bind rodzaj}" Grid.Column="4"/>
                            <TextBlock Text="{x:Bind rok_produkcji}" Grid.Column="5"/>
                            <TextBlock Text="{x:Bind dane_silnika}" Grid.Column="6"/>
                            <TextBlock Text="{x:Bind rodzaj_paliwa}" Grid.Column="7"/>
                            <TextBlock Text="{x:Bind liczba_miejsc}" Grid.Column="8"/>
                            <TextBlock Text="{x:Bind kolor}" Grid.Column="9"/>
                            <TextBlock Text="{x:Bind termin_przegladu}" Grid.Column="10"/>
                            <TextBlock Text="{x:Bind status_rejestracji}" Grid.Column="11"/>-->
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>
    